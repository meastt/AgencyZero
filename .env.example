# --- RUNTIME FLAGS ---
# Suppress direct Telegram alerts from tool scripts (Commander handles messaging)
SUPPRESS_TELEGRAM_ALERTS=1

# --- BRAIN & SEARCH ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here
GEMINI_API_KEY=optional_gemini_key_here

# --- WORDPRESS ACCESS ---
# Primary site (Griddle King example)
WP_URL=https://yourdomain.com/
WP_USERNAME=your_wp_username
WP_APP_PASS=xxxx xxxx xxxx xxxx xxxx xxxx

# Additional sites use SITE_PREFIX: WP_PHOTOTIPSGUY_COM_, WP_TIGERTRIBE_NET_, etc.
# WP_PHOTOTIPSGUY_COM_URL=https://phototipsguy.com
# WP_PHOTOTIPSGUY_COM_USERNAME=your_username
# WP_PHOTOTIPSGUY_COM_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx
# WP_PHOTIPSGUY_COM_NICHE=photography astrophotography and telescopes

# --- GOOGLE SEARCH CONSOLE ---
GSC_SITE_URL=https://yourdomain.com/
# Paste the entire JSON string from your Service Account file here
GSC_JSON_KEY='{"type": "service_account", "project_id": "your-project", "private_key_id": "...", "private_key": "-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n", "client_email": "...", ...}'

# Per-site GSC properties (when using multiple sites)
# WP_GRIDDLEKING_GSC_SITE_URL=https://griddleking.com/
# WP_PHOTOTIPSGUY_COM_GSC_SITE_URL=https://phototipsguy.com/
# WP_TIGERTRIBE_NET_GSC_SITE_URL=https://tigertribe.net/

# --- MESSAGING ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Per-site Telegram (optional, for direct agent messaging)
# WP_GRIDDLEKING_TELEGRAM_BOT_TOKEN=...
# WP_GRIDDLEKING_TELEGRAM_CHAT_ID=...
# WP_PHOTOTIPSGUY_COM_TELEGRAM_BOT_TOKEN=...
# WP_PHOTOTIPSGUY_COM_TELEGRAM_CHAT_ID=...
# WP_TIGERTRIBE_NET_TELEGRAM_BOT_TOKEN=...
# WP_TIGERTRIBE_NET_TELEGRAM_CHAT_ID=...

# --- MODEL PROVIDERS (optional) ---
# MINIMAX_API_KEY=optional_minimax_key

# --- AFFILIATE PROGRAMS ---
# AMAZON_ASSOCIATE_TAG=your-site-20
# AMAZON_ASSOCIATE_STORE_ID=your-store-id
# IMPACT_RADIUS_ID=
# AVANTLINK_ID=

# --- AGENT SETTINGS ---
AGENCYZERO_MODE=production
HEARTBEAT_INTERVAL_MINS=60
